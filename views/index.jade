extends layout

block content
    h1= title
    p This is Sequelize greeting you :)

    h2 Creating a new user
    form(action="/users/create", method="post")
        input(type="text", name="username")
        input(type="submit")

    h2 Users

    ul

    each user in users
        li
            = user.username
            | &nbsp;
            | (
            a(href="/users/" + user.id + "/destroy") Destroy
            | )
            ul
                li
                    | Creating a new task:
                    form(action="/users/" + user.id + "/tasks/create", method="post")
                        input(type="text", name="title")
                        input(type="submit")
                each task in user.Tasks
                    li
                        = task.title
                        | &nbsp;
                        | (
                        a(href="/users/" + user.id + "/tasks/" + task.id + "/destroy") Destroy
                        | )

    h2 Creating a new Customer
        form(action="/customers", method="post")
            input(type="hidden" name="clientId" value="99999999999900")
            input(type="text", name="id" )
            input(type="text", name="name")
            input(type="text", name="email")
            input(type="submit")
    h2 Creating a new Customer without email
        form(action="/customers", method="post")
            input(type="hidden" name="clientId" value="99999999999900")
            input(type="text", name="id" )
            input(type="text", name="name")
            input(type="submit")

    each customer in customers
        li
            = customer.id + " - " + customer.name
            | &nbsp;
            | (
            a(href="/customers/" + customer.id + "/destroy") Destroy
            | )
